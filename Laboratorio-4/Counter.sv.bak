/* Contador parametrizable
*  Basado en el c√≥digo visto en clase
*/
module Counter #(parameter N = 8)(input clk, rst, en,
											 output [N-1:0] Q);
	
	reg [N-1:0] Qreg;
	assign Q = Qreg;
	
	always_ff @(negedge clk or posedge rst)
		if (rst) Qreg = 0;
		else
			if (en) Qreg = Qreg + 1;
			
	
endmodule 